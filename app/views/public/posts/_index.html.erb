<h3 class="mx-5"><%= user.name %>さんの投稿一覧</h3>

  <table class="table border-bottom table-hover table-inverse mx-4">
    <tbody>
      <% if posts.present? %>
        <% posts.each do |post| %>
        <tr>
          <td >
            <%= image_tag post.get_image(120,90) %>
          </td>
          <td class="align-middle text-center">
            <%= link_to post_path(post.id) do %>
              <%= l post.created_at, format: :short %><br>
              <i class="fa-solid fa-location-dot" style="color: #7a7a7a;"></i>
              <%= post.prefecture_address %>
              <%= post.city_address %>
              <%= post.block_address %>
            <% end %>
          </td>
          <td class="align-middle text-center">
            <!--危険だと赤色表示、安全だと緑色表示-->
            <% if post.danger? %>
              <span class="text-danger font-weight-bold">
                <%= post.status_i18n %>
              </span>
            <% elsif post.safety? %>
              <span class="text-success font-weight-bold">
                <%= post.status_i18n %>
              </span>
            <% end %>
          </td>
        </tr>
        <% end %>
      <!--投稿がない場合は投稿がありませんと表示される-->
      <% else %>
        <td class="text-center">
          <h4>投稿がありません</h4>
          
        </td>
      <% end %>
    </tbody>
  </table>


<!--ページネーション-->
<div class="d-flex justify-content-center">
  <%= paginate @posts, theme: 'bootstrap-5'%>
</div>