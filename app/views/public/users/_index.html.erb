<!--ユーザーの一覧-->
<table class="table border-bottom table-hover table-inverse mx-4">
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <%= image_tag user.get_profile_image(100,100), class: "rounded-circle" %>
          <%= user.name %>
        </td>
        <td>
          <i class="fa-solid fa-message" style="color: #7a7a7a;"></i>
          <%= user.introduction %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>