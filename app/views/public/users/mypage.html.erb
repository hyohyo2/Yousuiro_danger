<div class="row">
  <%= render 'public/users/info', current_user: @current_user %>

  <div class="col-10 my-5"> 
    <div class="container m-0">
      <h3 class="row my-4">
        <div class="col-1"></div>
        <span class='heading-title'>マイページ</span>
      </h3>
      <!--ログインユーザの情報-->
      <div class="col-6">
        <%= render 'public/users/show', user: @user %>
      </div>
      <!--ログインユーザの投稿-->
      <div class="row my-5">
        <%= render 'public/posts/index', posts: @posts, user: @user %>
      </div>
    </div>
  </div>
</div>