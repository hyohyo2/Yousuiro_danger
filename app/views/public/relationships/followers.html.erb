<!--フォロワー一覧-->
<div class="container my-3">
  <h3 class="row mb-4">
    <div class="col-1"></div>
    <!--ページ名表示消す-->
    <span class='heading-title'>フォロワー</span>
    <div class="col-lg-7 col-sm-6"></div>
    <%= link_to "戻る", user_path(@user.id), class: "btn btn-outline-info col-1" %>
  </h3>
  <div class="text-center">
    <% if @users.count == 0 %>
      <h3 class="py-5 text-center">ここにフォロワーが表示されます。</h3>
    <% else %>
      <%= render 'public/users/index', users: @users, class: "text-center" %>
    <% end %>
  </div>
  <!--ページネーション-->
  <div class="d-flex justify-content-center">
    <%= paginate @users, theme: 'bootstrap-5'  %>
  </div>
</div>