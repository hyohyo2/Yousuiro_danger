<!--フォローボタン-->
<!--ログインユーザーがゲストユーザーをフォローできないようにする(ゲストユーザーからのフォローはOK)-->
<% unless user.guest_user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn-light" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-info" %>
  <% end %>
<% end %>
