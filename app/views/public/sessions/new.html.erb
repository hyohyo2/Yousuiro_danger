<!--ログインページ-->
<div class="row">
   <%= render 'layouts/sidebar'%>
  <div class="col-lg-10 col-sm-9 mx-auto">
    <!--フラッシュメッセージ-->
    <% flash.each do |message_type, message| %>
      <div class="flash-message <%= message_type %>"><%= message %></div>
    <% end %>
    <div class="container my-4">
      <h3 class="row mb-4">
        <div class="col-1"></div>
        <span class='heading-title'>ユーザーログイン</span>
      </h3>
      <%= form_with model: @user, url: user_session_path do |f| %>
        <div class="row form-group justify-content-center">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス", class: "col-lg-4 col-sm-6" %>
        </div>

        <div class="row form-group justify-content-center">
          <%= f.password_field :password, autocomplete: "current-password",placeholder: "パスワード", class: "col-lg-4 col-sm-6" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="row form-group justify-content-center">
            <%= f.check_box :remember_me, class: "mr-1" %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="row form-group justify-content-center">
          <%= f.submit "ログイン", class: "btn btn-success col-lg-2 col-sm-4" %>
        </div>
      <% end %>
      <div class="row form-group justify-content-center">
        会員登録がお済みでない方は
        <%= render "public/shared/links" %>
         から会員登録をしてください。
      </div>
    </div>
  </div>
</div>