<!--管理者ログインページ-->
<div class="row">
   <%= render 'layouts/sidebar' %>
  <div class="col-10">
    <% flash.each do |message_type, message| %>
      <div class="flash-message <%= message_type %>"><%= message %></div>
    <% end %>
    <div class="container m-0">
      <h3 class="row my-4">
        <div class="col-2"></div>
        <span class='heading-title'>管理者ログイン</span>
      </h3>
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="row form-group justify-content-center">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス", class: "col-4" %>
        </div>

        <div class="row form-group justify-content-center">
          <%= f.password_field :password, autocomplete: "current-password",placeholder: "パスワード", class: "col-4" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="row form-group justify-content-center">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="row form-group justify-content-center">
          <%= f.submit "ログイン", class: "btn btn-success col-2 " %>
        </div>
      <% end %>
      <%= render "admin/shared/links" %>
      </div>
    </div>
  </div>
</div>
