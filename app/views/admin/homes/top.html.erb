<div class="row">
   <%= render "admin/shared/sidebar" %>
  <div class="col-10">
    <div class="container m-0">
      <h3 class="row my-4">
        <div class="col-2"></div>
        <span class='heading-title'>投稿一覧</span>
      </h3>
      <table class="table border-bottom table-hover table-inverse mx-4">
        <thead>
          <tr>
            <th>投稿日時</th>
            <th>投稿ユーザー</th>
            <th>住所</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= l post.created_at, format: :short %>
              </td>
              <td>
                <%= post.user.name %>
              </td>
              <td>
                <%= post.prefecture_address %>
                <%= post.city_address %>
                <%= post.block_address %>
                </td>
              <td>
                <% if post.danger? %>
                  <span class="text-danger font-weight-bold">
                    <%= post.status_i18n %>
                  </span>
                <% elsif post.safety? %>
                  <span class="text-success font-weight-bold">
                    <%= post.status_i18n %>
                  </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>