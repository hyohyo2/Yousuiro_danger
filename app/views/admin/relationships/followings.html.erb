<!--管理者フォロー一覧ページ-->
<div class="container my-3">
  <!--フラッシュメッセージ-->
  <% flash.each do |message_type, message| %>
    <div class="flash-message <%= message_type %>"><%= message %></div>
  <% end %>
  <div class="text-center my-3">
    <h3>
      <%= link_to admin_user_path(@user.id) do %>
        <i class="fa-solid fa-circle-chevron-left" style="color: #7a7a7a;"></i>
      <% end %>
      <strong><%= @user.name %></strong>
    </h3>
    <p>フォロー中<%= @user.followings.count %></p>
  </div>
  <!--フォローユーザーの一覧-->
  <div class="text-center">
    <% if @users.present? %>
      <%= render "admin/users/index", users: @users %>
    <!--フォロー数が0だと表示-->
    <% else %>
      <h3 class="py-5 text-center">ここにフォロ中ーのユーザーが表示されます。</h3>
    <% end %>
  </div>
  <!--ページネーション表示-->
  <div class="d-flex justify-content-center mt-3">
    <%= paginate @users, theme: 'bootstrap-5'%>
  </div>
</div>