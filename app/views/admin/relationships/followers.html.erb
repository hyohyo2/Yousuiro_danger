<!--管理者フォロワー一覧ページ-->
<div class="container my-3">
  <!--フラッシュメッセージ-->
  <% flash.each do |message_type, message| %>
    <div class="flash-message <%= message_type %>"><%= message %></div>
  <% end %>
  <div class="text-center my-3">
    <h3>
      <%= link_to admin_user_path(@user.id) do %>
        <i class="fa-solid fa-circle-chevron-left"  style="color: #7a7a7a;"></i>
      <% end %>
      <strong><%= @user.name %></strong>
    </h3>
    <p>フォロワー<%= @user.followers.count %></p>
  </div>
  <!--登録ユーザーの一覧-->
  <div class="text-center">
    <% if @users.count == 0 %>
      <h3 class="py-5 text-center">ここにフォロワーが表示されます。</h3>
    <% else %>
      <%= render "admin/users/index", users: @users %>
    <% end %>
  </div>

  <!--ページネーション表示-->
  <div class="d-flex justify-content-center">
    <%= paginate @users, theme: 'bootstrap-5'%>
  </div>
</div>