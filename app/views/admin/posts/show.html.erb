<!--管理者投稿詳細ページ-->
<div class="row">
  <%= render 'layouts/sidebar' %>
  <div class="col-10">
    <div class="container m-0">
      <h3 class="row my-4">
        <div class="col-1"></div>
        <span class='heading-title'>投稿詳細内容</span>
      </h3>
      <div class="row mb-3">
        <div class="col-5 text-center">
          <%= image_tag @post.get_image(320,240) %>
        </div>
        <div class="col-1"></div>
        <div class="col-6">
          <table class="table border-bottom">
            <tr>
              <th class="text-center col-3">投稿日時</th>
              <td class="col-9"><%= l @post.created_at%></td>
            </tr>
            <tr>
              <th class="align-middle text-center col-3">投稿者名</th>
              <td class="col-9">
                <%= image_tag @post.user.get_profile_image(50,50), class: "rounded-circle" %>
                <%= @post.user.name %>
              </td>
            </tr>
            <tr>
              <th class="align-middle col-3 text-center">状況</th>
              <td class="col-9">
                <!--危険だと赤色表示、安全だと緑色表示-->
                <% if @post.danger? %>
                  <span class="status-size text-danger font-weight-bold">
                    <%= @post.status_i18n %>
                  </span>
                <% elsif @post.safety? %>
                  <span class="status-size text-success font-weight-bold">
                    <%= @post.status_i18n %>
                  </span>
                <% end %>
              </td>
            </tr>
            <tr>
              <th class="col-3 text-center">郵便番号</th>
              <td class="col-9">〒<%= @post.post_code.to_s.insert(3, "-") %></td>
            </tr>
            <tr>
              <th class="align-middle text-center col-3">住所</th>
              <td class="col-9">
                <%= @post.prefecture_address %>
                <%= @post.city_address %>
                <%= @post.block_address %>
              </td>
            </tr>
            <tr>
              <th class="align-middle text-center col-3">詳細</th>
              <td class="col-9"><%= @post.detail %></td>
            </tr>
          </table>
          <div class="text-center">
            <%= link_to "削除する", admin_post_path(@post.id), method: :delete, class: "btn btn-danger col-4", "data-confirm" => "本当に削除しますか？" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-lg-6 col-sm-12">
        <h5>
          <i class="fa-solid fa-comment"  style="color: #7a7a7a;"></i>
          <%= @post.post_comments.count %>件のコメント
        </h5>
        <table class="table border-bottom table-hover table-inver">
          <tbody>
            <% @post.post_comments.each do |post_comment| %>
              <tr>
                <td class="text-center align-middle">
                  <%= l post_comment.created_at, format: :short %>
                </td>
                <td class="text-center">
                  <%= image_tag post_comment.user.get_profile_image(50,50), class: "rounded-circle" %><br>
                  <%= post_comment.user.name %>
                </td>
                <td class="text-center align-middle">
                  <%= post_comment.comment %>
                </td>
                <td class="text-center align-middle" colspan="3">
                  <%= link_to "コメントを削除", admin_post_post_comment_path(@post, post_comment), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>