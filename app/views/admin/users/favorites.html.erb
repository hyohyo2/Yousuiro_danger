<!--管理者お気に入り一覧ページ-->
<div class="container my-3">
  <!--フラッシュメッセージ-->
  <% flash.each do |message_type, message| %>
    <div class="flash-message <%= message_type %>"><%= message %></div>
  <% end %>
  <div class="text-center my-3">
    <h3>
      <%= link_to admin_user_path(@user.id) do %>
        <i class="fa-solid fa-circle-chevron-left"  style="color: #7a7a7a;"></i>
      <% end %>
      <strong><%= @user.name %></strong>
    </h3>
    <p><%= @user.favorites.count %>件のお気に入り</p>
  </div>
  <!--お気に入り投稿-->
  <% if @favorite_posts.present? %>
    <%= render "admin/homes/postindex", posts: @favorite_posts %>
  <!--お気に入りが0だと表示-->
  <% else %>
    <h3 class="py-5 text-center">ここにお気に入りに登録した投稿が表示されます。</h3>
  <% end %>
  <!--ページネーション表示-->
  <div class="d-flex justify-content-center">
    <%= paginate @favorite_posts, theme: 'bootstrap-5'%>
  </div>
</div>