<!--フッター-->
<div class= "footer" style="background-color: #a59ea4;">
  <div class="container">
    <div class="search pt-4">
      <!--ユーザーログイン時表示-->
      <% if user_signed_in? %>
        <div class="col-lg-5 col-sm-12 d-flex align-items-center justify-content-center pb-2">
          <ul class="navbar-nav">
              <li class="nav-item">
                <%= image_tag current_user.profile_image, class: "rounded-circle small-user-img" %>
                <strong><%= current_user.name %>さん</strong>　ログイン中
              </li>
          </ul>
        </div>
        <!--検索フォーム-->
        <div class="pb-2">
          <%= form_with url: search_path, method: :get, local: true do |f| %>
            <span class="search-form">
              <%= f.text_field :content, :size => "25",  placeholder: "ユーザー名・住所・〒を検索" %>
            </span>
            <span class="search-form">
              <%= f.select :model, options_for_select({"ユーザー名" => "user", "投稿住所" => "post", "郵便番号(半角ハイフンなし)" => "post_code" }),{prompt: "-選択してください-"},{required: true}%>
            </span>
            <span class="search-form">
              <%= f.submit "検索", class: "session-btn btn text-light" %>
            </span>
          <% end %>
        </div>
      <!--管理者ログイン時表示-->
      <% elsif admin_signed_in? %>
        <div class="col-lg-5 col-sm-12 d-flex align-items-center justify-content-center pb-2">
          <ul class="navbar-nav">
            <li class="nav-item">
              <h5>
                <i class="fa-solid fa-user-shield"></i>
                <strong>管理者ログイン中</strong>
              </h5>
            </li>
          </ul>
        </div>
        <div class="pb-2">
          <%= form_with url: admin_search_path, method: :get, local: true do |f| %>
            <span class="search-form">
              <%= f.text_field :content, :size => "25", placeholder: "ユーザー名・住所・〒を検索" %>
            </span>
            <span class="search-form">
              <%= f.select :model, options_for_select({"ユーザー名" => "user", "投稿住所" => "post", "郵便番号(半角ハイフンなし)" => "post_code" }),{prompt: "-選択してください-"},{required: true}%>
            </span>
            <span class="search-form">
              <%= f.submit "検索", class: "session-btn btn text-light" %>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>
    <!--コピーライト表示-->
    <div class="row pb-4 ">
      <div class="mx-auto">
        <p class="text-light m-0">CopyRight Honoka_Yasuda</p>
      </div>
    </div>
  </div>
</div>