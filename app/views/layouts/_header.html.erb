<!--ヘッダー-->
<nav class="navbar-dark" style="background-color: #a59ea4; ">
  <div class="row py-2">
    <!--リンク先マップへ修正すること-->
    <div class="col-1"></div>
    <div class="col-2 d-flex align-items-center">
      <a class="navbar-brand" href="/map">
        <span><%= image_tag "logo.png", size: '150x60' %></span>
      </a>
    </div>
    <div class="col-lg-2 col-sm-1"></div>
    <!--検索フォーム-->
    <% if user_signed_in? %>
      <div class="col-lg-3 col-sm-4 d-flex align-items-center justify-content-center">
        <ul class="navbar-nav">
            <li class="nav-item">
              <%= image_tag current_user.get_profile_image(50,50), class: "rounded-circle" %>
              <i class="fa-solid fa-user"></i>
              <strong><%= current_user.name %>さん</strong>　ログイン中
            </li>
        </ul>
      </div>
      <div class="col-4 d-flex align-items-center">
        <%= form_with url: search_path, method: :get, local: true do |f| %>
          <i class="fa-solid fa-magnifying-glass" style="color: #ffffff;"></i>
          <%= f.text_field :content, :size => "25",  placeholder: "ユーザー名・住所・〒を検索" %>
          <%= f.select :model, options_for_select({"ユーザー名" => "user", "投稿住所" => "post", "郵便番号(ハイフンなし)" => "post_code" }),{prompt: "-選択してください-"},{required: true}%>
          <%= f.submit "検索", class: "btn btn-secondary " %>
        <% end %>
      </div>
    <% elsif admin_signed_in? %>
      <div class="col-4 d-flex align-items-center">
        <%= form_with url: admin_search_path, method: :get, local: true do |f| %>
          <i class="fa-solid fa-magnifying-glass" style="color: #ffffff;"></i>
          <%= f.text_field :content, :size => "25",  placeholder: "ユーザー名・住所・〒を検索" %>
          <%= f.select :model, options_for_select({"ユーザー名" => "user", "投稿住所" => "post", "郵便番号(ハイフンなし)" => "post_code" }),{prompt: "-選択してください-"},{required: true}%>
          <%= f.submit "検索", class: "btn btn-secondary " %>
        <% end %>
      </div>
    <% end %>
  </div>
</nav>